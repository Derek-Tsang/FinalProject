<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bg_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject"
        tools:targetApi="31">
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UI.FlightTrackerActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity
            android:name=".UI.FavouriteFlightActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity
            android:name=".UI.CurrencyConverterActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity
            android:name=".UI.TriviaQuestionDatabaseActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity
            android:name=".UI.BearImageGeneratorActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
    </application>

</manifest>